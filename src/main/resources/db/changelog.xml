<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="alex.johnson" id="create growth trait table">
      <createTable tableName="growth_trait">
        <column name="growth_trait_id" type="BIGINT" autoIncrement="true">
          <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="result" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="opportunity" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="next_step" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="growth_assessment" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="goal" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="start_date" type="DATE">
          <constraints nullable="true"/>
        </column>
        <column name="status" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="age" type="INT">
          <constraints nullable="true"/>
        </column>
        <column name="notes" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
        <column name="trait_type" type="VARCHAR(255)">
          <constraints nullable="true"/>
        </column>
      </createTable>
    </changeSet>
    <changeSet author="alex.johnson" id="load data for growth trait">
      <loadData file="classpath:/db/growthtrait.csv" tableName="growth_trait" separator="," nullValue="">
        <column name="result" />
        <column name="opportunity" />
        <column name="next_step" />
        <column name="growth_assessment" />
        <column name="goal" />
        <column name="start_date" type="DATE" />
        <column name="status" />
        <column name="age" type="INT"/>
        <column name="notes" />
      </loadData>
    </changeSet>
    <changeSet author="alex.johnson" id="add created_at and updated_at columns">
      <addColumn tableName="growth_trait">
        <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()" />
        <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()" />
      </addColumn>
    </changeSet>
    <changeSet author="alex.johnson" id="update age to calculate from start_date">
      <update tableName="growth_trait">
        <column name="age" valueComputed="DATE_PART('DAY', NOW() - start_date)" />
        <column name="updated_at" valueComputed="NOW()"/>
      </update>
    </changeSet>
</databaseChangeLog>
